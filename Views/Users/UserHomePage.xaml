<UserControl x:Class="WPFK.Views.Users.UserHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top navigation bar -->
        <Border Background="#0078D7" Grid.Row="0" Padding="10">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Witaj, Użytkowniku!" Foreground="White" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center" >
                    <Button Content="Moje Przesyłki" Margin="5,0" Padding="10,5" Background="Transparent" Foreground="White" BorderBrush="Transparent" Cursor="Hand" />
                    <Button Content="Profil" Margin="5,0" Padding="10,5" Background="Transparent" Foreground="White" BorderBrush="Transparent" Cursor="Hand" />
                    <Button Content="Wyloguj" Margin="5,0" Padding="10,5" Background="Transparent" Foreground="White" BorderBrush="Transparent" Cursor="Hand" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main content area -->
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center" Width="600">
            <TextBlock Text="Twoje przesyłki" FontSize="22" FontWeight="Bold" Margin="0,0,0,15" Foreground="#333" />
            <ListView ItemsSource="{Binding Parcels}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nadawca" DisplayMemberBinding="{Binding SenderName}" />
                        <GridViewColumn Header="Odbiorca" DisplayMemberBinding="{Binding RecipientName}" />
                        <GridViewColumn Header="Adres" DisplayMemberBinding="{Binding Address}" />
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" />
                        <GridViewColumn Header="Data utworzenia" DisplayMemberBinding="{Binding CreatedAt}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Odśwież" Command="{Binding RefreshCommand}" Width="100" Margin="0,15,0,0" HorizontalAlignment="Right" Padding="8,5"
        Background="#0078D7" Foreground="White" BorderThickness="0" Cursor="Hand"  />
        </StackPanel>
    </Grid>
</UserControl>
