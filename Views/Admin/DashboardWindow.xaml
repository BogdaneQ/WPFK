<Window x:Class="WPFK.Views.Admin.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kurier - Panel Administratora" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#E0F0FF">

    <Window.Resources>
        <!-- Styl dla przycisków -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Styl ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <DockPanel LastChildFill="False" Margin="0,0,0,20">
            <TextBlock Text="🚚 Panel Administratora - Kurier" FontSize="26" FontWeight="Bold" Foreground="#007ACC"
                       VerticalAlignment="Center"/>
            <Button Content="Wyloguj" DockPanel.Dock="Right" Width="100" Click="LogoutButton_Click"/>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="3.5*"/>
            </Grid.ColumnDefinitions>

            <!-- FORMULARZ dodawania/edycji paczek -->
            <Border Grid.Column="0" Background="White" Padding="15" Margin="0,0,20,0" CornerRadius="10" BorderBrush="#B0D9FF" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Nowa paczka:" FontSize="18" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>

                    <TextBlock Text="Nadawca:"/>
                    <TextBox Text="{Binding NewParcelSender, UpdateSourceTrigger=PropertyChanged}" ToolTip="Login nadawcy"/>

                    <TextBlock Text="Odbiorca:" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding NewParcelRecipient, UpdateSourceTrigger=PropertyChanged}" ToolTip="Login odbiorcy"/>

                    <TextBlock Text="Adres dostawy:" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding NewParcelAddress, UpdateSourceTrigger=PropertyChanged}" ToolTip="Adres"/>

                    <TextBlock Text="Status przesyłki:" Margin="0,10,0,0"/>
                    <ComboBox SelectedValue="{Binding NewParcelStatus, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content">
                        <ComboBoxItem Content="Przyjęta"/>
                        <ComboBoxItem Content="W drodze"/>
                        <ComboBoxItem Content="Dostarczona"/>
                    </ComboBox>

                    <Button Content="Dodaj przesyłkę" Command="{Binding AddParcelCommand}" Margin="0,10,0,0" Width="297"/>
                    <Button Content="Edytuj przesyłkę" Command="{Binding EditParcelCommand}" Width="298"/>
                </StackPanel>
            </Border>

            <!-- LISTA przesyłek -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="📦 Lista przesyłek:" FontSize="18" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>
                <ListView ItemsSource="{Binding Parcels}" SelectedItem="{Binding SelectedParcel, Mode=TwoWay}" Height="350">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nadawca" DisplayMemberBinding="{Binding SenderName}" />
                            <GridViewColumn Header="Odbiorca" DisplayMemberBinding="{Binding RecipientName}" />
                            <GridViewColumn Header="Adres" DisplayMemberBinding="{Binding Address}" />
                            <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" />
                            <GridViewColumn Header="Data utworzenia" DisplayMemberBinding="{Binding CreatedAt}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- FILTR + przyciski -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Filtruj po statusie:" VerticalAlignment="Center" Width="130"/>
                    <ComboBox SelectedItem="{Binding FilterStatus, UpdateSourceTrigger=PropertyChanged}" Width="150">
                        <ComboBoxItem Content="Wszystkie"/>
                        <ComboBoxItem Content="Przyjęta"/>
                        <ComboBoxItem Content="W drodze"/>
                        <ComboBoxItem Content="Dostarczona"/>
                    </ComboBox>
                    <Button Content="Filtruj" Command="{Binding FilterCommand}" Width="90"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Height="31">
                    <Button Content="📜 Pokaż historię" Command="{Binding ShowHistoryCommand}" Width="140" Height="22"/>
                    <Button Content="🔄 Odśwież" Command="{Binding RefreshCommand}" Width="100" Height="22"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

