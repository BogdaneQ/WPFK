<Window x:Class="WPFK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="500" Width="500"
        Background="#E0F0FF"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Styl dla przycisków -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Styl ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Background="White" CornerRadius="12" Padding="30" BorderBrush="#B0D9FF" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="250" Height="218">

                <TextBlock Text="Logowanie" FontSize="24" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Nazwa użytkownika:"/>
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,15"/>

                <TextBlock Text="Hasło:"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
                <Button Content="Zaloguj" Click="LoginButton_Click" Width="100" Height="22"/>
                <Button Content="Zarejestruj" Click="RegisterButton_Click" Width="100" Height="24"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
