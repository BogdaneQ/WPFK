<Window x:Class="WPFK.StatusHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historia Statusów" Height="300" Width="400">
    <Grid>
        <ListView x:Name="StatusHistoryListView" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="150"/>
                    <GridViewColumn Header="Data zmiany" DisplayMemberBinding="{Binding ChangedAt}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
